        "typescript": "^4.7.4",
        "webpack": "^5.51.2",
        "webpack-cli": "^4.8.0",
        "webpack-dev-server": "^4.7.4"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/egorovsa/react-video-seek-slider.git"
    },
    "peerDependencies": {
        "react": ">=16.8.0",
        "react-dom": ">=16.8.0"
    }
